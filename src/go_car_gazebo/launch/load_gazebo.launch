<?xml version='1.0' encoding='UTF-8'?>
<launch>
    <arg name="world" default="city"/>

    <!-- Adding third party models to Gazebo environment -->
    <env name="GAZEBO_MODEL_PATH" value="$(find go_car_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)"/>
    <!-- Fixing of Ignition Transport failure -->
    <env name="IGN_IP" value="127.0.0.1"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!-- <arg name="world_name" value="empty.world"/> -->
        <arg name="world_name" value="$(find go_car_gazebo)/worlds/$(arg world).world"/>
        <arg name="debug" value="false"/>
        <arg name="gui" value="true"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="verbose" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro '$(find go_car_description)/urdf/go_car_model.xacro' robot_name:='go_car'"/>
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" output="screen" respawn="false" args="-urdf -model go_car -param robot_description -x -0.08 -y -0.09 -z 1"/>

    <param name="robot_description" command="$(find xacro)/xacro '$(find go_car_description)/urdf/go_car_model.xacro' robot_name:='go_car'"/>

    <include file="$(find go_car_control)/launch/load_gazebo_joints_controllers.launch"/>

    <node name="tf_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="joint_states" to="/go_car/joint_states" />
    </node>

</launch>