<?xml version='1.0' encoding='UTF-8'?>
<launch>
    <arg name="world" default="city"/>
    <arg name="details" default="quality"/>
    <arg name="car_model" default="lincolm"/>

    <!-- Fixing of Ignition Transport failure -->
    <env name="IGN_IP" value="127.0.0.1"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!-- <arg name="world_name" value="empty.world"/> -->
        <arg name="world_name" value="$(find go_car_gazebo)/worlds/$(arg world).world"/>
        <arg name="debug" value="false"/>
        <arg name="gui" value="true"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="verbose" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro '$(find go_car_description)/urdf/go_car_model.xacro' robot_name:='go_car' details:=$(arg details) car_model:=$(arg car_model)"/>
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" output="screen" respawn="false" args="-urdf -model go_car -param robot_description -x 50.0 -y 74.1 -z 0.85 -R 0 -P 0 -Y -1.56"/>

    <rosparam file="$(find go_car_gazebo)/config/gazebo_joints_controllers_params.yaml" command="load"/>

    <node name="tf_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="joint_states" to="/go_car/joint_states" />
    </node>

    <node name="world_frame_publisher" pkg="tf" type="static_transform_publisher" args="50.0 74.1 0.0 -1.56 0 0 world map 1000"/>
    <node pkg="go_car_gazebo" type="ground_truth_tf_publisher" name="go_car_gazebo_frame_publisher"/>

</launch>